/* page/listenPage/listenPage.wxss */
.search{
    border: 2px solid #eee;
    border-right: 30rpx solid #eee;
    border-left: 30rpx solid #eee;
    
    display: flex;
    flex-flow: row;
    justify-content: space-between;
}

.searchInput{
    border-radius: 30%;
}
.item{
    display: flex;
    flex-flow:row;
    height: 200rpx;
    width:100%;
    background-color: #fff;
    border-top: 4rpx solid #eee;
    border-right: 4rpx solid #eee;
    box-sizing: border-box;
}
.hover_demo{
    cursor: pointer;
}
.img{
    display: flex;
    flex-flow:row;
    height: 100%;
    width:200rpx;
    /* flex-grow: 1; */
}


.item .meta{
  display: flex;
  flex-direction: column;  
  flex-grow: 4;
  font-size: 13px;
}
.score{
    display: flex;
    justify-content: center;
    flex-grow: 0.5;
}

.loadmore{
    display: flex;
    flex-direction: row;
    justify-content: center;
    
}